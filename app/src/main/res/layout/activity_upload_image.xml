<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UploadImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"

                android:layout_height="20dp"
                android:src="@drawable/baseline_arrow_back_24"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Upload Image"
                android:textColor="@color/black"
                android:textSize="28dp" />


        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/uploadedimageView"
                android:layout_width="wrap_content"
                android:paddingTop="20dp"
                android:scaleType="fitCenter"

                android:layout_height="200dp"
                android:src="@drawable/imggallary" />

            <ImageView
                android:id="@+id/imageCross"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:src="@drawable/cross"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="top|end" />

        </FrameLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectimg_btn"
            android:layout_width="312dp"
            android:layout_height="74dp"
            android:background="@drawable/backgroud4"
            android:layout_marginTop="40dp"

            android:text="Select Image"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadimg_btn"
            android:layout_width="312dp"
            android:layout_height="74dp"
            android:background="@drawable/background2"
            android:layout_marginTop="20dp"
            android:text="Upload Image"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>








    </LinearLayout>

    <View
        android:layout_width="95dp"
        android:layout_height="4dp"
        android:background="@drawable/straightline"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center" />







</RelativeLayout>